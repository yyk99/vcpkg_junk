{
  "version": 2,
  "configurePresets": [
    {
      "name": "default",
      "inherits": "vcpkg",
      "environment": {
        "VCPKG_ROOT": "g:\\opt\\vcpkg"
      }
    },
    {
      "name": "windows-devyyk",
      "inherits": "vcpkg",
      "environment": {
        "VCPKG_ROOT": "c:\\opt\\vcpkg"
      }
    },
    {
      "name": "kestrel",
